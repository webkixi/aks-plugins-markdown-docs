@import "../common"

WIDTH_IMG_FEATHER_LI = 302px

.hlist
  .itemrootCkb
    display none

.hheader
  img
    width: auto

.docs-container
  margin-top: 4em


a.htitle
  color: #364049
  font-size .8em
  text-decoration none
  
.markdown-body
  .democode
    display: flex
    flex-direction: row
    flex-wrap: wrap
    list-style: none
    li
      flex: 1
      list-style: none
      padding: 0
      margin: 0
      &:first-child
        flex: 1
      &:last-child
        flex: 2
      pre
        margin: 0

.category-content-container
  .category-content
    img
      width: auto
    pre
      width: 100%
  
  .imgs
    list-style: none
    display: flex
    flex-direction: row
    li
      list-style: none
      margin: 4px 8px 4px 0
      padding: 0
      width: 130px
      img
        width: 100%
      
  .feather
    display: flex
    flex-direction: row
    flex-wrap: wrap
    list-style: none
    margin-bottom: 1em
    li
      padding: 0
      margin: 0
      list-style: none
      width: WIDTH_IMG_FEATHER_LI
      // flex: 1
      // display: flex
      // justify-content: center
      // align-items: center
      font-size: 18px
      height: 140px
      border: 1px solid #fce5d7
      border-radius: 3px
      padding: 8px
      margin: 4px 8px 4px 0
      br
        display: none
      strong
        display: block
        margin-bottom: 6px
        font-size: 20px
        font-weight: 100
      em
        display: block
        margin-top: 3px
        font-size: 13px
        font-style: normal
        color: #a8a8a8

feather1024()
  .category-content-container
    .feather
      li
        width: 240px

mediaMax1024( feather1024 )