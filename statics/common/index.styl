.sticky-container
  z-index: 9991;
  width: 100%;
  height: 50px;
  position: fixed;
  top: 0;
  left: 0;
  outline: 0;
  background-clip: padding-box;
  background-color: #0593d3;
  .navtop 
    width: 90%
    height: 50px;
    margin: 0 auto;
    a
      display: block;
      margin-right: 5px;
      height: 40px
      width: 40px
      img
        width: 100%

.page-footer
  height 20em
  margin-top 2em
  background-color #34383b

.docs-container
  width: 960px;
  min-height 600px
  margin: 0 auto;
  margin-top: 2em
  display: flex
  .docs-tree
    width: 15%
    display: flex
    // background-color: #ffffff
    border-right: 1px solid #fff5e9
    justify-content: center
    padding-top: 0.7em
    margin-left: 0.7em
    margin-right: 1.5em
    > .hlist
      width: 100%
      list-style none
    .hlist
      tree()
  .docs-content
    flex: 1
    margin-right: 1em
    clear()
    pre
      // width: 720px
      max-height: 700px
      overflow: auto
    .split
      clear()
      visibility: hidden
      height: 0
      margin: 1em
      padding: 0
      & + pre
        width: 50%
        float: left
        margin: 0
        & + ul
          clearHr()
          display: block
          width: 49.5%
          float: right
          padding-left: 1em
          li
            margin: 0
            padding: 0
            .itemCategory
              ul > li
                padding-left: 1em
          >li
            list-style: none
            margin-bottom: 2em
            & + div
              width: 100%
        & + div
          width: 49.5%
          float: right
          clearHr()
          & + div
            width: @width
            float: @float
            clearHr()
            & + div
              width: @width
              float: @float
              clearHr()
              & + div
                width: @width
                float: @float
                clearHr()
        


