/*
* 顶部sticky
*/
.sticky-container
  z-index: 9991;
  width: 100%;
  height: 50px;
  position: fixed;
  top: 0;
  left: 0;
  outline: 0;
  background-clip: padding-box;
  background-color: #0593d3;
  .navtop 
    width: 90%
    height: 50px;
    margin: 0 auto;
    a
      display: block;
      margin-right: 5px;
      height: 40px
      width: 40px
      img
        width: 100%

/*
* 内容主容器
*/
.docs-container
  width: 960px;
  min-height 900px
  margin: 0 auto;
  margin-top: 2em
  display: flex
  /*
  * 左侧栏目列表
  */
  .docs-tree  
    width: 15%
    display: flex
    // background-color: #ffffff
    border-right: 1px solid #fff5e9
    justify-content: center
    padding-top: 0.7em
    margin-left: 0.7em
    margin-right: 1.5em
    > .hlist
      width: 100%
      list-style none
    .hlist
      tree()
  
  /*
  * 中间内容部分
  */
  .docs-content
    width 60%
    // margin-right: 1em
    clear()
    pre
      // width: 720px
      max-height: 700px
      overflow: auto
    .split
      clear()
      visibility: hidden
      height: 0
      margin: 1em
      padding: 0
      & + pre
        width: 50%
        float: left
        margin: 0
        & + ul
          clearHr()
          display: block
          width: 49.5%
          float: right
          padding-left: 1em
          li
            margin: 0
            padding: 0
            .itemCategory
              ul > li
                padding-left: 1em
          >li
            list-style: none
            margin-bottom: 2em
            & + div
              width: 100%
        & + div
          width: 49.5%
          float: right
          clearHr()
          & + div
            width: @width
            float: @float
            clearHr()
            & + div
              width: @width
              float: @float
              clearHr()
              & + div
                width: @width
                float: @float
                clearHr()
  /*
  右边部分
  */
  .docs-right
    position: relative
    width: 15%
    // 右边自动菜单
    .docs-menu 
      top: 5em
      code
        display: none
      li
        font-size: 14px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        word-break: break-all;
        white-space: normal;
      a
        display block
        text-decoration: underline
        width 100%
        text-overflow: ellipsis;

