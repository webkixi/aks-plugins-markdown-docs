html
  font: normal normal normal 16px/150% Arial,Verdana,"微软雅黑";
  width: 100%
  height: 100%
body
  padding: 1em;
  width: 100%
  height: 100%

ul
  list-style none
  li
    list-style none

clear()
  &:after{content:'';display:block;clear:both;height:0;overflow:hidden;visibility:hidden;}
  zoom:1
  clear: both
  
.clear:after{content:'';display:block;clear:both;height:0;overflow:hidden;visibility:hidden;}
.clear{zoom:1;clear: both}

@import './markdown'

a.htitle
  line-height: 220%
  font-size: 12px
  color: #aaa
  &:hover
    text-decoration: underline
.itemCategory
  >a.htitle
    font-size: 16px
    color: #0593d3
    text-decoration: none

tree()
  margin-left: 1em
  li.itemroot
    li
      &:before
        content: '•'
        margin-right: 0.2em
        margin-left: 0.1em
        color: #d9d9d9
        
  li.level0
    li.itemroot
      margin-left: 0
      margin-top: 1.4em
      list-style-type: none
      &:before
        content: ''
        margin: 0

ul_hlist()
  ul.hlist
    li
      padding: 0
      margin: 0
      >.itemCategory
        >ul
          margin-left: 1em


clearHr()
  &+hr
    height: 0
    padding: .5em
    border: 0

.hlist
  .itemrootCkb
    width: 0

.flex-row
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-flex-flow: row;
  -moz-box-orient: horizontal;
